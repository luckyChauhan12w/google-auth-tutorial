{
    "info": {
      "name": "Authentication API",
      "description": "Complete authentication system with email verification and password reset",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:3000",
        "type": "string"
      },
      {
        "key": "userId",
        "value": "",
        "type": "string"
      },
      {
        "key": "userEmail",
        "value": "",
        "type": "string"
      }
    ],
    "item": [
      {
        "name": "Authentication",
        "item": [
          {
            "name": "Register User",
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "if (pm.response.code === 201) {",
                    "    const responseJson = pm.response.json();",
                    "    pm.collectionVariables.set('userId', responseJson.data._id);",
                    "    pm.collectionVariables.set('userEmail', responseJson.data.email);",
                    "}"
                  ]
                }
              }
            ],
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/v1/auth/register",
                "host": ["{{baseUrl}}"],
                "path": ["api", "v1", "auth", "register"]
              }
            },
            "response": []
          },
          {
            "name": "Login User",
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "if (pm.response.code === 200) {",
                    "    const responseJson = pm.response.json();",
                    "    pm.collectionVariables.set('userId', responseJson.data._id);",
                    "}"
                  ]
                }
              }
            ],
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/v1/auth/login",
                "host": ["{{baseUrl}}"],
                "path": ["api", "v1", "auth", "login"]
              }
            },
            "response": []
          },
          {
            "name": "Check Authentication Status",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"userId\": \"{{userId}}\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/v1/auth/is-auth",
                "host": ["{{baseUrl}}"],
                "path": ["api", "v1", "auth", "is-auth"]
              }
            },
            "response": []
          },
          {
            "name": "Logout User",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/api/v1/auth/logout",
                "host": ["{{baseUrl}}"],
                "path": ["api", "v1", "auth", "logout"]
              }
            },
            "response": []
          }
        ]
      },
      {
        "name": "Email Verification",
        "item": [
          {
            "name": "Send Verification OTP",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"userId\": \"{{userId}}\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/v1/auth/send-otp",
                "host": ["{{baseUrl}}"],
                "path": ["api", "v1", "auth", "send-otp"]
              }
            },
            "response": []
          },
          {
            "name": "Verify Email with OTP",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"otp\": \"1234\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/v1/auth/verify-otp",
                "host": ["{{baseUrl}}"],
                "path": ["api", "v1", "auth", "verify-otp"]
              }
            },
            "response": []
          }
        ]
      },
      {
        "name": "Password Reset",
        "item": [
          {
            "name": "Send Password Reset OTP",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"{{userEmail}}\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/v1/auth/send-reset-otp",
                "host": ["{{baseUrl}}"],
                "path": ["api", "v1", "auth", "send-reset-otp"]
              }
            },
            "response": []
          },
          {
            "name": "Reset Password with OTP",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"otp\": \"1234\",\n  \"password\": \"NewSecurePass123!\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/v1/auth/reset-password",
                "host": ["{{baseUrl}}"],
                "path": ["api", "v1", "auth", "reset-password"]
              }
            },
            "response": []
          }
        ]
      }
    ]
  }
  